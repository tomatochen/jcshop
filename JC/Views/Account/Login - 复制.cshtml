    <script language="javascript" type="text/javascript">

        if (!window.applicationCache) {

            alert("很抱歉！系统检测到您正在使用的浏览器不符合W3C国际标准，为了保证您使用本系统的数据安全，以及您的隐私不受干扰，登录本系统请使用符合W3C国际标准的浏览器！");
            window.opener = null;
            window.open('', '_self', '')
            window.close();
        }
        else {

        }

        //操作
        jQuery(function ($) {

            $("#txt_loginname").focus();

            //登录
            $("#btn_login").click(function (e) {

                DoLogin();

            });

            $(document).keydown(function (e) {
                if (e.keyCode == 13) {
                    $("#btn_login").click();
                }
            });
        });

        //登录
        function DoLogin() {

            var obj_username = $("#txt_loginname").val();//登录名【用户名】
            var obj_userpwd = $("#txt_loginpwd").val();//密码

            if (obj_username == "") {
                alert("账号不能为空！");
                $("#txt_loginname").focus();
                return;
            }

            if (obj_userpwd == "") {
                alert("密码不能为空！");
                $("#txt_loginpwd").focus();
                return;
            }

            var target = document.getElementById("myspin");
            var spinner = new Spinner().spin(target, $("#mycover"));

            $.ajax({
                type: "POST",
                dataType: "json",
                url: '@Url.Action("Login", "Account")',
                data: { "loginName": obj_username, "loginPassword": obj_userpwd },
                success: function (data) {

                    if (data.Success) {
                        window.location = "@Url.Action("Index", "Home")";
                    } else {
                        alert(data.Message);
                    }

                },
                error: function () {
                    alert("发生系统错误,请与系统管理员联系！");

                },
                beforeSend: function () {

                },
                complete: function () {
                    spinner.stop($("#mycover"));
                }
            });
        }


        function btover(obj) {

            //debugger;
        }

        function btout(obj) {

        }
    </script>
